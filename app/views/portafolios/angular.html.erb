<h1>Angular Portafolio items</h1>

<%# link_to viene siendo la etiqueta a href de HTML %>
<%# Línea para mandar a la página new_portaflio_url al dar click
 en Create New Item %>
<%= link_to "Create New Item", new_portafolio_url if logged_in?(:site_admin) %>

<%@angular_portfolio_items.each do |portfolio_item| %>
    <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
    <p><%= portfolio_item.subtitle %></p>
    <p><%= portfolio_item.body %></p>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <%= link_to "Edit", edit_portafolio_path(portfolio_item)  if logged_in?(:site_admin) %>
    
    <%# Para borrar un item%>
    <%= link_to 'Delete Portfolio Item', portafolio_path(portfolio_item), method: :delete, data: { 
        confirm: 'Are you sure?' }  if logged_in?(:site_admin) %>
<%end%>